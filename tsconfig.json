{
	"extends": "@vue/tsconfig/tsconfig.dom.json",
	"compilerOptions": {
		"allowJs": true,
		"target": "ESNext",
		"module": "ESNext",
		"alwaysStrict": true,
		"lib": ["ESNext", "DOM"],
		"types": ["node", "jsdom"],
		"moduleResolution": "Bundler",
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
		},
	},
	"include": [
		"env.d.ts",
		"src/**/*.ts",
		"src/**/*.vue",
		"vite.config.*",
		"vitest.config.*",
		"tailwindcss.config.*",
	],
	"exclude": ["node_modules", "dist", "docs"],
}
