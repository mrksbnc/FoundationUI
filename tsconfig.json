{
	"extends": "@vue/tsconfig/tsconfig.dom.json",
	"compilerOptions": {
		"allowJs": true,
		"target": "ESNext",
		"module": "ESNext",
		"alwaysStrict": true,
		"lib": ["ESNext", "DOM"],
		"types": ["node", "jsdom"],
		"moduleResolution": "Bundler",
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": [
		"env.d.ts",
		"src/**/*.ts",
		"src/**/*.vue",
		"*.config.*",
		".eslintrc.cjs"
	],
	"exclude": ["node_modules", "dist", "docs"]
}
