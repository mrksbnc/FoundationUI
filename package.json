{
	"name": "@mrksbnc/bamboo",
	"version": "0.0.1-test.1",
	"description": "Vue 3 UI library built with Vite and Storybook",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "npm run type-check && npm run lint && vite optimize --force && vite build --mode production && npx tailwindcss -o dist/index.css --minify",
		"preview": "vite preview",
		"test": "vitest --run --update",
		"build-only": "vite build",
		"type-check": "vue-tsc --noEmit",
		"lint": "eslint -c eslint.config.js",
		"format": "prettier --write src/",
		"patch": "npm version --no-git-tag-version patch",
		"minor": "npm version --no-git-tag-version minor",
		"major": "npm version --no-git-tag-version major",
		"release": "npm run build && npm publish --access public",
		"storybook": "storybook dev -p 6006 --no-open",
		"build-storybook": "storybook build -o static",
		"chromatic": "npx chromatic --exit-zero-on-changes"
	},
	"homepage": "http://mrksbnc.github.io/bamboo",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/mrksbnc/bamboo.git"
	},
	"bugs": {
		"url": "https://github.com/mrksbnc/bamboo/issues"
	},
	"files": [
		"dist/**/*"
	],
	"engines": {
		"node": ">=20.9.0",
		"npm": ">=10.1.0"
	},
	"publishConfig": {
		"tag": "latest",
		"access": "public",
		"registry": "https://registry.npmjs.org/"
	},
	"main": "./dist/index.cjs.js",
	"module": "./dist/index.es.js",
	"types": "./dist/src/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.es.js",
			"require": "./dist/index.umd.js"
		},
		"./index.css": {
			"import": "./dist/main.css",
			"require": "./dist/main.css"
		}
	},
	"dependencies": {
		"vue": "^3.4.27"
	},
	"devDependencies": {
		"@chromatic-com/storybook": "^1.5.0",
		"@storybook/addon-coverage": "^1.0.4",
		"@storybook/addon-docs": "^8.1.6",
		"@storybook/addon-essentials": "^8.1.6",
		"@storybook/addon-interactions": "^8.1.6",
		"@storybook/addon-links": "^8.1.6",
		"@storybook/addon-themes": "^8.1.6",
		"@storybook/blocks": "^8.1.6",
		"@storybook/test": "^8.1.6",
		"@storybook/theming": "^8.1.6",
		"@storybook/vue3": "^8.1.6",
		"@storybook/vue3-vite": "^8.1.6",
		"@tsconfig/node18": "^18.2.2",
		"@types/jsdom": "^21.1.7",
		"@types/node": "^20.14.2",
		"@vitejs/plugin-vue": "^5.0.5",
		"@vitest/coverage-v8": "^1.6.0",
		"@vue/test-utils": "^2.4.6",
		"@vue/tsconfig": "^0.5.1",
		"autoprefixer": "^10.4.19",
		"chromatic": "^11.0.0",
		"gh-pages": "^6.1.1",
		"globals": "^15.4.0",
		"jsdom": "^24.1.0",
		"postcss": "^8.4.35",
		"postcss-nesting": "^12.1.5",
		"prettier": "^3.3.1",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"remark-gfm": "^4.0.0",
		"sass": "^1.77.4",
		"storybook": "^8.1.6",
		"tailwindcss": "^3.4.4",
		"ts-node": "^10.9.2",
		"typescript": "^5.4.5",
		"vite": "^5.2.13",
		"vite-plugin-compression": "^0.5.1",
		"vite-plugin-dts": "^3.9.1",
		"vite-svg-loader": "^5.1.0",
		"vitest": "^1.6.0",
		"vue-tsc": "^2.0.21"
	}
}
